[Unit]
Description=Consul service discovery agent
Requires=network-online.target
After=network.target

[Service]
Restart=on-failure
ExecStart=/bin/bash -c "/opt/consul agent -server -advertise $(curl http://169.254.169.254/latest/meta-data/public-ipv4) -bootstrap $OPTIONS -config-dir=/opt/consul.d -data-dir /tmp/consul"
ExecReload=/bin/kill -s HUP $MAINPID
KillSignal=SIGINT
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
